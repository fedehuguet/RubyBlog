<div class="post">
	<h2><%= @post.title %></h2>
	<small><%= @post.created_at.strftime("%b %d. %Y") %></small>
	<p>Created By: <%= @post.admin_user.name %></p>
	<p><%= @post.body %></p>
	<p>Category <%= link_to @post.category.name, catergory_path(:id => @post.category.id) %></p>
	<p><%= link_to "Back",posts_path %></p>
</div>
<div class="post">
	<h3>Add new Comment</h3>
	<%= form_for @post_comment do |f| %>
		<%= f.hidden_field :post_id %>
		<p>
			<%= f.label :name %><br />
			<%= f.text_field :name %>
		</p>
		<p>
			<%= f.label :email %><br />
			<%= f.text_field :email %>
		</p>
		<p>
			<%= f.label :body %><br />
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit "Post Comment" %><br />
		</p>
	<% end %> 
	<hr>
	<%= render :partial => "partials/post_comment", :collection => @post.post_comments %>
</div>